<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>TeacherControlador</servlet-name>
        <servlet-class>Controlador.TeacherControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CourseControlador</servlet-name>
        <servlet-class>Controlador.CourseControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SocialMediaControlador</servlet-name>
        <servlet-class>Controlador.SocialMediaControlador</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TeacherControlador</servlet-name>
        <url-pattern>/teacher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseControlador</servlet-name>
        <url-pattern>/course</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SocialMediaControlador</servlet-name>
        <url-pattern>/social_media</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
